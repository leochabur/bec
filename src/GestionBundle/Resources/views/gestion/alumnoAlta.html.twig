{% extends "layout.html.twig" %}
{% block fos_user_content %}
<br>
<hr>
<span class="h5 card-title">{{ label }} Alumno</span>
<hr>
{% include 'messages.html.twig' %}
{{ form_start(form, {'attr' : {'novalidate' : 'novalidate'}}) }}

	<div class='form-row'>
		<div class="col-4">
			{{ form_label(form.ente.apellido) }}
			{{ form_widget(form.ente.apellido, {'attr' : { 'class' : 'form-control'}}) }}
			<div class="text-danger">
				{{ form_errors(form.ente.apellido) }}
			</div>
		</div>
		<div class="col-4">
			{{ form_label(form.ente.nombre) }}
			{{ form_widget(form.ente.nombre, {'attr' : { 'class' : 'form-control'}}) }}
		<div class="text-danger">
			{{ form_errors(form.ente.nombre) }}
		</div>
		</div>
		<div class="col-4">
			{{ form_label(form.ente.documento) }}
			{{ form_widget(form.ente.documento, {'attr' : { 'class' : 'form-control'}}) }}
		<div class="text-danger">
			{{ form_errors(form.ente.documento) }}
		</div>
		</div>
	</div>
	<div class='form-row'>
		<div class="col-4">
			{{ form_label(form.ente.direccion) }}
			{{ form_widget(form.ente.direccion, {'attr' : { 'class' : 'form-control'}}) }}
			{{ form_errors(form.ente.direccion) }}
		</div>
		<div class="col-4">
			{{ form_label(form.ente.telefono) }}
			{{ form_widget(form.ente.telefono, {'attr' : { 'class' : 'form-control'}}) }}
			{{ form_errors(form.ente.telefono) }}
		</div>
		<div class="col-4">
			{{ form_label(form.ente.email) }}
			{{ form_widget(form.ente.email, {'attr' : { 'class' : 'form-control'}}) }}
			{{ form_errors(form.ente.email) }}
		</div>
	</div>
	<div class="form-row">
		<div class="col-12">
			{{ form_widget(form.guardar, { 'attr' : { 'class' : 'btn danger-color-dark text-white'}}) }}
		</div>
	</div>


{{ form_widget(form) }}
{{ form_end(form) }}
{% endblock fos_user_content %}
